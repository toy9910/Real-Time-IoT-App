<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9E6D3">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/one_spinner"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:entries="@array/test"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_temp"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_red"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_temp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/celsius_white" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#E9FFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/one_temp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25.3"
                android:textColor="#E9FFFFFF"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_hum"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_blue"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_humiditiy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/humidity1_white" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#E9FFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/one_humidity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25.3"
                android:textColor="#E9FFFFFF"
                android:textSize="25dp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_gas"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_purple"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_gas"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/valve_white" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#E9FFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/one_gas"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25.3"
                android:textColor="#E9FFFFFF"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_dust"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_yellow"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_dust"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/air_white" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Particulate Matter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#E9FFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/one_dust"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25.3"
                android:textColor="#E9FFFFFF"
                android:textSize="25dp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_light"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_green"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Light"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#E9FFFFFF"
                android:textSize="18dp" />
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9FFFFFF" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <!--임의 너비 지정함 일단-->

                <ImageView
                    android:id="@+id/image_led"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/light_white" />

                <TextView
                    android:id="@+id/one_led"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="52"
                    android:textColor="#E9FFFFFF"
                    android:textSize="25dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:max="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>