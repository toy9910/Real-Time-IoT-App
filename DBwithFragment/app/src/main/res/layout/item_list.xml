<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/id_list"
    android:background="@color/sexyblue"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView_room_no"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:textColor="#E9FFFFFF" />

    <TextView
        android:id="@+id/textView_room_nm"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#E9FFFFFF" />


    <TextView
        android:id="@+id/textView_room_temp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#E9FFFFFF" />


    <TextView
        android:id="@+id/textView_room_hum"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="#E9FFFFFF" />

    <TextView
        android:id="@+id/textView_room_gas"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#E9FFFFFF" />

    <TextView
        android:id="@+id/textView_room_dust"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/circle"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:textColor="#E9FFFFFF" />

    <TextView
        android:id="@+id/textView_room_light"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="#E9FFFFFF" />

</LinearLayout>